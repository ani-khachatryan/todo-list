#:kivy 2.0

<TaskPopup>:
    size_hint: 0.6, 0.6
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: f'Task name, I hope... \n{root.caller.text}' 
        Button:
            pos_hint: {'center_x' : 0.5}
            size_hint: 0.2, 0.2
            text: 'Delete'
            on_press: root.caller.delete()
            on_press: root.dismiss()
        Button:
            pos_hint: {'center_x' : 0.5}
            size_hint: 0.2, 0.2
            text: 'CLOSE'
            on_press: root.dismiss()

<TaskButton>:
    on_release: self.press()
