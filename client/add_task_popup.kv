#:kivy 2.0

<AddTaskPopup>:
    description: description
    auto_dismiss: True
    size_hint: 0.6, 0.6
    title: 'Adding Task'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 0.9, 1
            orientation: 'horizontal'
            Label:
                text : "Description: "
                size_hint : 0.2, 0.4
                pos_hint : {"x" : 0.2, "top" : 0.8}
            TextInput:
                id : description
                multiline :False
                size_hint : 0.5, 0.6
                pos_hint : {"x" : 0.45, "top" : 0.9}
        BoxLayout:
            size_hint: 0.8, 1
            pos_hint: {'center_x': 0.5}
            orientation: 'horizontal'
            Label:
                text: "enter task date"
                id: date
            Button:
                size_hint: 0.5, 0.5
                pos_hint: {'center_y': 0.5}
                text: 'Select date'
                on_press: root.show_date_picker()
        Button:
            pos_hint : {"center_x" : 0.5, "y": 0.5}
            size_hint: 0.3, 0.3
            text: 'Confirm'
            on_press: root.add_task()
